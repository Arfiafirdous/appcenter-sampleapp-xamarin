<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="sampleAppXamarin.ButtonPage"
    Title="Mobile Center Sample App for Xamarin">
    <ContentPage.Content>
    <StackLayout Padding="10,0">
      <Label Text="Press one of the buttons below"
            FontSize="Large"
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="CenterAndExpand" />
        <Button x:Name="crashAlert"
                Text="Send a sample crash"
             BackgroundColor="Transparent"
             VerticalOptions="CenterAndExpand"
             HorizontalOptions="CenterAndExpand"
             Clicked="Crash_Clicked"/>
        <Button x:Name="sampleAlert"
                Text="Send a sample event"
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="CenterAndExpand"
            Clicked="Event_Clicked"/>
        <Button x:Name="colorAlert"
                Text="Send event with color property"
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="CenterAndExpand"
            Clicked="Color_Clicked"/>
    </StackLayout>
	</ContentPage.Content>
</ContentPage>
